{
  "name": "publications-pipeline",
  "version": "1.0.0",
  "description": "Transform scientific PDFs into accessible news articles for the Ocean Recoveries Lab website",
  "scripts": {
    "extract": "node scripts/extract-pdfs.cjs",
    "generate": "node scripts/generate-quality-news.cjs",
    "generate:ai": "node scripts/generate-ai-news.cjs",
    "analyze": "node scripts/analyze-publication.cjs",
    "build": "node scripts/build-posts-from-analysis.cjs && node scripts/build-frontend.cjs",
    "serve": "python3 -m http.server 8000 --directory frontend",
    "dev": "npm run build && npm run serve"
  },
  "dependencies": {
    "pdf-parse": "^1.1.1"
  },
  "keywords": ["publications", "pdf", "science-communication"],
  "author": "Ocean Recoveries Lab",
  "license": "MIT"
}
